<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:id="@+id/SportskiCentar"
        android:text="Dobrodošli !"
        android:background="@drawable/pocetna"
        android:textSize="20dp"
        android:gravity="bottom"

        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Sportski centar modernog dizajna."/>
    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Sadrži sve što je potrebno za jednog sportskog aktivistu, od velikih sportskih sala za rukomet, košarku i futsal, preko teretana do unutarnjih bazena za plivanje."/>
    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Pored objekta se nalazi veliki travnjak za fudbal. Uz njega se nalaze dva teniska igrališta."/>
    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Dođite i uvjerite se u kvalitetu koju samo mi nudimo."/>
</LinearLayout>
</ScrollView>