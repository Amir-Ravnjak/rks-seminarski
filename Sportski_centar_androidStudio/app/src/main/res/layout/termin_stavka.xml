<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="15dp">

    <TextView
        android:id="@+id/nazivProstorije"
        android:text="Prostorija"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/tvTermin"
        android:layout_below="@+id/nazivProstorije"
        android:paddingTop="7dp"

        android:text="Termin"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/tvCijena"
        android:text="Cijena"
        android:layout_below="@id/nazivProstorije"
        android:paddingTop="7dp"
        android:layout_toRightOf="@+id/tvTermin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <CheckBox
        android:id="@+id/cbSlobodan"
        android:layout_below="@id/tvTermin"
        android:text="Slobodan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        />
</RelativeLayout>