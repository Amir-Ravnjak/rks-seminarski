<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/svTerminDetalji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:id="@+id/slikaNote"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_writing" />


    <TextView
        android:id="@+id/tvProstorija"
        android:layout_below="@+id/slikaNote"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:text="Prostorija"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nazivProstorije"
        android:layout_below="@+id/tvProstorija"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTerm"
        android:layout_below="@+id/nazivProstorije"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:text="Termin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Termin"
        android:layout_below="@+id/tvTerm"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvCijena"
        android:layout_below="@+id/Termin"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:text="Cijena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cijenaRezervacije"
        android:layout_below="@+id/tvCijena"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/Slobodan"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cijenaRezervacije"
        android:text="Slobodan"/>

    <Button
        android:id="@+id/btnRezervisi"
        android:layout_below="@+id/Slobodan"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="Rezervisi"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />




</RelativeLayout>

</ScrollView>